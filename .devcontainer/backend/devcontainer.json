// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Backend",
	"dockerComposeFile": "../../compose.dev.yaml",
	"service": "backend",
	// "shutdownAction": "none",
	"workspaceFolder": "/workspace/backend",
	"postCreateCommand": "sudo chown vscode -R /home/vscode/.zinit && sudo chown vscode -R /home/vscode/.zsh_history && sudo chown vscode -R /home/vscode/.ssh && go mod download && go install github.com/codegangsta/gin@latest && go install github.com/golangci/golangci-lint/cmd/golangci-lint@v1.61.0",
	"postStartCommand": "gin --appPort 8000 --port 8080",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true
			},
			"extensions": [
				"golang.Go",
				"Dhikilabs.gin-snippets",
				"766b.go-outliner",
				"premparihar.gotestexplorer",
				"saxon-chuang.go-imports-sorter",
				"Cardinal90.multi-cursor-case-preserve"
			]
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8080,
		5000
	]
}