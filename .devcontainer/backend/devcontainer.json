// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Backend",
	"dockerComposeFile": "../../compose.dev.yaml",
	"service": "backend",
	"shutdownAction": "none",
	"workspaceFolder": "/workspace/backend",

	"postCreateCommand": "go mod download",
	"postStartCommand": "go run main.go",
	// "postStartCommand": "gin --appPort 8080 --port 3000 --path /app --buildArgs --all --buildArgs -o --buildArgs /app/main --buildArgs /app/main.go --buildArgs run",

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"golang.Go",
				"Dhikilabs.gin-snippets",
				"766b.go-outliner",
				"premparihar.gotestexplorer"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8080
	]
}
